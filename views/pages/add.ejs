<div class="add_new_form">
  <h2>Add new blog</h2>
  <form class="add_form" method="POST" action="/submit-form">
    <div class="add_form_input">
      <label for="title">Title</label>
      <input
        required
        type="text"
        id="title"
        name="title"
        placeholder="Enter title"
      />
    </div>

    <div class="add_form_input">
      <label for="description">Description</label>
      <textarea
        rows="4"
        required
        id="description"
        name="description"
        placeholder="Enter description"
      ></textarea>
    </div>

    <button type="submit">Submit</button>
  </form>
</div>
